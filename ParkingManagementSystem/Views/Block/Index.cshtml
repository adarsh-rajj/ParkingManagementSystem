@{
    ViewBag.Title = "BlockAvailable";
}

<h2 class="text-center fw-bold">Block Available</h2>

<table id="BlockAvailabilityTable" class="display table table-bordered table-hover" style="width:100%">
    <thead>
        <tr>
            <th>BlockNo</th>
            <th>Available</th>
        </tr>
    </thead>
</table>

<link href="https://cdn.datatables.net/v/bs5/dt-2.1.8/datatables.min.css" rel="stylesheet">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
@section scripts {
    <script src="https://cdn.datatables.net/v/bs5/dt-2.1.8/datatables.min.js"></script>
    <script>
        $(function () {
            $('#BlockAvailabilityTable').DataTable({
                processing: true,
                serverSide: true,
                order: [0, "asc"],
                destroy: true,
                ajax: {
                    url: "/Block/LoadBlockData",
                    type: "POST",
                    datatype: "json",
                    contentType: "application/json",
                    data: function (d) {
                        return JSON.stringify(d);
                    }
                },
                columns: [
                    { data: "BlockNo", name: "BlockNo", searchable: true, orderable: true },
                    { data: "Capacity", name: "Capacity", searchable: true, orderable: true },
                ],
            });
        });

    </script>
}

